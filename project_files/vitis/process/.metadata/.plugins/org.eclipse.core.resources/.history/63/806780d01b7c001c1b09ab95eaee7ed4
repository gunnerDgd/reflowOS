#include <cstdint>
#include <cstddef>

namespace reflowOS 						{
namespace hardware_specific::microblaze {

	struct context
	{
		typedef std::uint32_t register_type;
		typedef void		(*execute_type)(void*);
		typedef void*		  parameter_type;

		register_type stack_pointer;
		register_type general_purposed[13];
	};

	void store_and_switch (context&, context&);
	void store_and_execute(context&, context&, context::execute_type, );
}
}
