#define CONTEXT_STD(type) constexpr static type

namespace reflowOS {
	class basic_context
	{
	public:
	};

	template <typename AnyContext>
	struct is_context 							  { CONTEXT_STD(bool) value = false; };

	template <typename AnyContext>
	struct is_context<basic_context<ContextType>> { CONTEXT_STD(bool) value = false; };
}
