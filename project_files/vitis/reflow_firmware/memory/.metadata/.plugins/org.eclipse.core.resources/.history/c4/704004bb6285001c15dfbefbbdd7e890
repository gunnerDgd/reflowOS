#include <xparameters.h>

#include <cstddef>
#include <cstdint>

#define REFLOW_STATIC_VARIABLE(type, name) static constexpr type name;

namespace reflow_firmware::memory {
	typedef std::size_t   size_type;
	typedef std::uint8_t* pointer_type;

	static constexpr size_type

	template <size_type memory_size>
	struct block { std::uint8_t context[memory_size]; };

	template <size_type memory_size>
	struct block_flag {};
}
