	class clock_source
	{
	public:
		using native_handle_type = hardware_specific::clocking::native_clock_source;
		using frequency_type     = hardware_specific::clocking::frequency_type;

	public:
		clock_source (native_handle_type);
		~clock_source();

	public:
		void 		   rescale		    ();
		frequency_type current_frequency();
	};



}
}
